---
// Navbar Component
---
<nav class="bg-white shadow-sm">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        <!-- Logo -->
        <div class="text-2xl font-bold">
            <a href="#" class="text-gray-800 hover:text-gray-900">KERAPY</a>
        </div>
        
        <!-- Navigation Links -->
        <div class="hidden md:flex space-x-8 items-center">
            <a href="#" class="text-gray-800 hover:text-gray-900 font-medium relative group">
                Home
                <span class="absolute left-0 bottom-0 w-0 group-hover:w-full h-0.5 bg-teal-500 transition-all duration-300"></span>
            </a>  
            <a href="#" class="text-gray-800 hover:text-gray-900 font-medium relative group">
                About Us
                <span class="absolute left-0 bottom-0 w-0 group-hover:w-full h-0.5 bg-teal-500 transition-all duration-300"></span>
            </a>
            <a href="#" class="text-gray-800 hover:text-gray-900 font-medium relative group">
                Services
                <span class="absolute left-0 bottom-0 w-0 group-hover:w-full h-0.5 bg-teal-500 transition-all duration-300"></span>
            </a>
            <a href="#" class="text-gray-800 hover:text-gray-900 font-medium relative group">
                Contact Us
                <span class="absolute left-0 bottom-0 w-0 group-hover:w-full h-0.5 bg-teal-500 transition-all duration-300"></span>
            </a>
            <a href="#" class="text-gray-800 hover:text-gray-900 font-medium relative group">
                Blog
                <span class="absolute left-0 bottom-0 w-0 group-hover:w-full h-0.5 bg-teal-500 transition-all duration-300"></span>
            </a>
        </div>
        
  
        <!-- Contact Button for Desktop -->
        <div class="hidden md:flex">
            <a href="#" class="px-6 py-2 border border-gray-800 text-gray-800 rounded-full hover:bg-gray-100">
                Contact us
            </a>
        </div>
  
        <!-- Mobile Menu Button -->
        <div class="md:hidden">
            <button id="mobile-menu-button" class="text-gray-800 focus:outline-none">
                <!-- Hamburger Icon -->
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </button>
        </div>
    </div>
  
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden px-6 pb-4">
        <a href="#" class="block py-2 text-gray-800 hover:text-gray-900">Home</a>
        <a href="#" class="block py-2 text-gray-800 hover:text-gray-900">About Us</a>
        <a href="#" class="block py-2 text-gray-800 hover:text-gray-900">Services</a>
        <a href="#" class="block py-2 text-gray-800 hover:text-gray-900">Contact Us</a>
        <a href="#" class="block py-2 text-gray-800 hover:text-gray-900">Blog</a>
    </div>
  </nav>
  
  <!-- Client-side JavaScript Script -->
  <script type="module">
    document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
  
        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
    });
  </script>